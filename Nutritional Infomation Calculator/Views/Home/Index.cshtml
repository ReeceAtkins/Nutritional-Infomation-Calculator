@model List<Nutritional_Infomation_Calculator.Models.MenuItem>
@using System.Text.Json;
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 d-flex flex-wrap pr-md-5">
            @foreach (MenuItem menuItem in Model)
            {
                <div class="col-md-3 mb-3">
                    <div class="card item-card cardItem" data-json='@JsonSerializer.Serialize(menuItem)'>

                        <img src="@menuItem.Image" class="card-img-top item-image" onerror="this.onerror=null; this.src='https://via.placeholder.com/150';">
                        <div class="card-body card-body-overlay">
                            <h5 class="card-title">@menuItem.Title</h5>
                            <!--<button>Display Nutrients</button> -->
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Sidebar -->
        <div class="col-md-4 sidebar">
            <div id="sidebar-content">
                <div id="nutritionInfo">
                    
                </div>
                <div id="nutritionTotal">
                </div>
            </div>
            <div id="clearTotalContainer">
                <button id="clearTotal">Clear Total</button>
            </div>
        </div>
    </div>
</div>
